{
  "compilerOptions": {
    // Language and runtime target
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],

    // Type safety and correctness
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,

    // Module system and bundling behavior
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,

    // JSX and framework integration
    "jsx": "react-jsx",
    "plugins": [{ "name": "next" }],

    // Developer experience and build performance
    "allowJs": true,
    "incremental": true,

    // Path aliases and project structure
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] }
  },

  // Project file boundaries
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
